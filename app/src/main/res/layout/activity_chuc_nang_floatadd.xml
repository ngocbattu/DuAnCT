<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitvity.ChucNangFloataddActivity"
    android:background="#F8F7F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:layout_constraintBottom_toTopOf="@+id/contrain11"
        android:background="@drawable/cuttom_chuc_nang_add"
        android:id="@+id/contrain12"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpage_chuc_nang_add"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/contrain11"
        android:background="@color/white"
        >
     <ImageView
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/calendra"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginLeft="45dp"
         android:id="@+id/image_calendar_add"
         />
        <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/mymap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_calendar_add"
        android:layout_marginLeft="45dp"
            android:id="@+id/image_map_add"
        />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_map_add"
            android:layout_marginLeft="45dp"
            android:id="@+id/image_photo_add"
            />

        <TextView
            android:id="@+id/txt_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#38316B"
            android:text="Public"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintStart_toEndOf="@+id/image_photo_add"
            app:layout_constraintBottom_toTopOf="@+id/float_close"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_tat_bat"
            app:layout_constraintBottom_toTopOf="@+id/float_close"
            app:layout_constraintStart_toEndOf="@+id/txt_public"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="4dp"
            android:id="@+id/float_close"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/contrain13"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="SAVE"
            android:textSize="14dp"
            android:fontFamily="@font/ubuntu_light"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="New Post"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/txt_new"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#82A0FA"
            android:text="DONE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/ubuntu_light"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
              />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_new"
            android:layout_marginTop="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry for January 4, 2017 | 10:30 PM"
        app:layout_constraintTop_toBottomOf="@+id/contrain13"
        android:gravity="center"
        android:textColor="#D1D1D1"
        android:textSize="11sp"
        android:id="@+id/txt_entry"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="Add a title"
        app:layout_constraintTop_toBottomOf="@+id/txt_entry"
        android:background="@null"
        android:id="@+id/txt_add_title"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_add_title"
        android:textSize="14sp"
        android:textColor="#C8C8C8"
        android:text="Start writingâ€¦"
        android:layout_marginLeft="35dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>