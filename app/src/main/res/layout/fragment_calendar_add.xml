<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmnetChucNang.CalendarFragment_add"
    android:background="@drawable/cuttom_chuc_nang_add">

            <TextView
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txt_Select"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_close"
                android:id="@+id/image_close_calnedar"
                />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Select"
        android:layout_marginTop="5dp"
        android:background="#C6C4C4"
        android:id="@+id/view_vien"
         />

    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_vien" />


</androidx.constraintlayout.widget.ConstraintLayout>